{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "include": [
    "src",
  ],
  "exclude": ["node_modules", "dist", "tmp_dist"],
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  }
}
